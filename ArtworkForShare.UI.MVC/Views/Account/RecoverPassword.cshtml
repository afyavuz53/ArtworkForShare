
@{
    ViewData["Title"] = "RecoverPassword";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-12">
            <div class="login-content">
                <form role="form" method="post">
                    <div class="templatemo_form">
                        <h2>Şifre Kurtarma</h2>
                    </div>
                    <div class="templatemo_form">
                        <p>Aşağıdaki bilgileri doldurup e-mailinize şifre sıfırlama linki gönderebilirsiniz.</p>
                    </div>
                    <div class="templatemo_form">
                        <input name="FirstName" type="text" class="form-control" placeholder="Adınız">
                    </div>
                    <div class="templatemo_form">
                        <input name="LastName" type="text" class="form-control" placeholder="Soyadınız">
                    </div>
                    <div class="templatemo_form">
                        <input name="Username" type="text" class="form-control" placeholder="Kullanıcı Adınız">
                    </div>
                    <div class="templatemo_form">
                        <input name="Email" type="email" class="form-control" placeholder="E-Mailiniz">
                    </div>
                    <div class="eBtnZemin">
                        <div class="eBtnBody">
                            <button type="submit" class="eBtn eBtnBack">
                                <span></span>
                                <span></span>
                                <span></span>
                                <span></span>
                                Link gönder
                            </button>
                        </div>
                    </div>
                </form>
                <div>
                    @if (ViewContext.ViewBag.Check != null)
                    {
                        @if (ViewContext.ViewBag.Message != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewContext.ViewBag.Message
                            </div>
                        }
                    }
                    else
                    {

                        @if (ViewContext.ViewBag.Message != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewContext.ViewBag.Message
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>


